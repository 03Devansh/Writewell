{
  "meta": {
    "projectName": "AI Text Editor",
    "version": "1.0.0",
    "aesthetic": "Soft UI, Minimalist, Tactile"
  },
  "typography": {
    "fontFamily": {
      "display": "Playfair Display, serif",
      "ui": "Inter, sans-serif"
    },
    "googleFontsImport": "https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&family=Playfair+Display:ital,wght@0,400;0,600;0,700;1,400&display=swap",
    "scale": {
      "h1": { "size": "2.5rem", "weight": "700", "lineHeight": "1.2" },
      "h2": { "size": "2rem", "weight": "600", "lineHeight": "1.3" },
      "h3": { "size": "1.5rem", "weight": "600", "lineHeight": "1.4" },
      "body": { "size": "1rem", "weight": "400", "lineHeight": "1.6" },
      "caption": { "size": "0.875rem", "weight": "400", "lineHeight": "1.5" }
    }
  },
  "colors": {
    "background": {
      "app": "#F3F4F6",
      "surface": "#FFFFFF",
      "surfaceHighlight": "#F9FAFB"
    },
    "text": {
      "primary": "#111827",
      "secondary": "#6B7280",
      "tertiary": "#9CA3AF",
      "inverse": "#FFFFFF"
    },
    "action": {
      "primary": "#374151",
      "primaryHover": "#1F2937",
      "accent": "#4F46E5"
    },
    "border": {
      "subtle": "#E5E7EB",
      "focus": "#D1D5DB"
    },
    "feedback": {
      "success": "#10B981",
      "warning": "#F59E0B",
      "error": "#EF4444"
    }
  },
  "ui_components": {
    "borderRadius": {
      "sm": "6px",
      "md": "12px",
      "lg": "16px",
      "xl": "24px",
      "pill": "9999px"
    },
    "shadows": {
      "soft": "0 4px 6px -1px rgba(0, 0, 0, 0.05), 0 2px 4px -1px rgba(0, 0, 0, 0.03)",
      "medium": "0 10px 15px -3px rgba(0, 0, 0, 0.05), 0 4px 6px -2px rgba(0, 0, 0, 0.025)",
      "floating": "0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04)",
      "inner": "inset 0 2px 4px 0 rgba(0, 0, 0, 0.06)"
    },
    "spacing": {
      "xs": "0.5rem",
      "sm": "1rem",
      "md": "1.5rem",
      "lg": "2rem",
      "xl": "3rem"
    }
  },
  "component_specs": {
    "buttons": {
      "default": {
        "bg": "transparent",
        "text": "#374151",
        "radius": "12px",
        "hover": "#F3F4F6"
      },
      "active_tool": {
        "description": "Used for bold/italic toggles when active",
        "bg": "#FFFFFF",
        "shadow": "0 2px 4px rgba(0,0,0,0.08)",
        "text": "#111827",
        "transform": "translateY(-1px)"
      },
      "floating_bar": {
        "bg": "#374151",
        "text": "#FFFFFF",
        "radius": "9999px"
      }
    },
    "editor_canvas": {
      "bg": "#FFFFFF",
      "radius": "24px",
      "padding": "2rem",
      "shadow": "soft"
    },
    "tags": {
      "mention": {
        "bg": "#E5E7EB",
        "text": "#1F2937",
        "radius": "4px",
        "padding": "2px 6px"
      }
    }
  }
}
